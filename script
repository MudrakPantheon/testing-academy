  kubectl taint nodes master-1 node-role.kubernetes.io/control-plane:NoSchedule
  kubectl taint nodes master-1 node-role.kubernetes.io/master:NoSchedule

  kubectl delete job -n jenkins-system update-job
  
  sudo rm -r /jenkins-data/
  kubectl delete secret regsecret -n jenkins-system
  helm uninstall -n jenkins-system jenkins
  kubectl delete pv pv-for-jenkins
  cd ansible/ && ansible-playbook site.yaml -t jenkins && cd .. 
